<div class="container">
    <div class="register">
        <h2>Login</h2>
    </div>
    <form action="/post/login" method="POST">
        <label>Email</label>
        <br/>
        <input class="input-field" placeholder="example@gmail.com" name="email" />
        <br />
        <label>Password</label>
        <br/>
        <input class="input-field" placeholder="enter your password" name="password" />
        <br />
        <button type="submit" class="btn">Login</button>
    </form>
    <div class="options">
        <p>Not register yet? <a href="/register">Register</a></p>
    </div>
</div>