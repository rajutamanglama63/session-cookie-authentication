<div class="container">
    <div class="register">
        <h2>Register</h2>
    </div>
    <form action="/post/register" method="POST">
        <label>Username</label>
        <br/>
        <input class="input-field" placeholder="enter your username" name="username" />
        <br />
        <label>Email</label>
        <br/>
        <input class="input-field" placeholder="example@gmail.com" name="email" />
        <br />
        <label>Password</label>
        <br/>
        <input class="input-field" placeholder="enter your password" name="password" />
        <br />
        <button type="submit" class="btn">Register</button>
    </form>
    <div class="options">
        <p>Already register? <a href="/login">Login</a></p>
    </div>
</div>